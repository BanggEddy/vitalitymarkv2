{% extends 'headeradmin.html.twig' %}

{% block title %}Coupon index{% endblock %}

{% block body %}
    <h1>Coupon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>Start_date</th>
                <th>End_date</th>
                <th>Reduction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for coupon in coupons %}
            <tr>
                <td>{{ coupon.id }}</td>
                <td>{{ coupon.type }}</td>
                <td>{{ coupon.description }}</td>
                <td>{{ coupon.startDate ? coupon.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ coupon.endDate ? coupon.endDate|date('Y-m-d') : '' }}</td>
                <td>{{ coupon.reduction }}</td>
                <td>
                    <a href="{{ path('app_coupon_show', {'id': coupon.id}) }}">show</a>
                    <a href="{{ path('app_coupon_edit', {'id': coupon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_coupon_new') }}">Create new</a>
    <a href="{{ path('loyalty_card_new') }}">Ajouter un coupon pour le mÃªme type</a>

{% endblock %}
